{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"outDir": "dist",
		"rootDir": "src",
		"paths": {
			"@versus-type/shared/*": ["../shared/src/*"],
			"@versus-type/shared": ["../shared/src/index.ts"],
			"@versus-type/*": ["../*/src"],
			"@/*": ["./src/*"]
		}
	},
	"include": ["src"],
	"references": [
		{
			"path": "../shared"
		}
	]
}
